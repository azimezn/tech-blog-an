{{!-- homepage includes: existing blog posts, navigation links for homepage and dashboard, log in button --}}


<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
      <a href="/{{post.id}}"><h2>{{post.title}}</h2></a>
    <p>Created by {{post.user.username}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.contents}}
    </p>
  </div>
</div>
{{/each}}