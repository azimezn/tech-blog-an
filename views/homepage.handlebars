{{!-- homepage includes: existing blog posts, navigation links for homepage and dashboard, log in button --}}


<!-- Loop over each object in the posts array -->
{{#each post as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <a href="/post/{{post.id}}">{{post.name}}</a>
    </h2>
    <p>
      {{post.title}}
    </p>
    <p>Created by {{post.user.username}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.contents}}
    </p>
  </div>
</div>
{{/each}}